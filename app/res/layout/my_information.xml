<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background" >

    <!-- 个人信息页面 -->

	<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="#0db8f6"
        android:orientation="horizontal" >

        

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:text="管理账号"
            android:textColor="#ffffff"
            android:textSize="20dip" />
    </FrameLayout>
	
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical" >

                <com.example.ext.common.imageCarousel.CircleImageView
                    android:id="@+id/my_defalft_headpic"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dip"
                    android:background="@drawable/my_defalft_headpic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/information_color" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dip"
                        android:layout_marginLeft="80dip"
                        android:layout_gravity="center"
          
                        android:layout_marginTop="10dip"
                        android:text="隐私设置:" />

                    <Spinner
                        android:id="@+id/school1"
                        android:layout_width="150dip"
                        android:layout_height="match_parent"
                        android:textAlignment="2"
                        android:entries="@array/shezi" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/icon_woman"
                    android:layout_marginTop="5dip"
                    android:textSize="20dip"
                    android:textColor="#ffffff"
                    android:text="昵称" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="1dip"
        android:background="@drawable/information_color"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            
            android:text="     电话:" 
            android:textColor="#dcdcdc"/>

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            
            android:text="18859216454" />

        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="1dip"
        android:background="@drawable/information_color"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#dcdcdc"
            android:text="   真实姓名:" />

        <TextView
            android:id="@+id/username1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            
            android:text="XXXX" />

        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="1dip"
        android:background="@drawable/information_color"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#dcdcdc"
            android:text="  当前所在学校:" />

        <TextView
            android:id="@+id/school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            
            android:text="XXXX" />

       
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="1dip"
        android:background="@drawable/information_color"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#dcdcdc"
            android:text="     邮箱:" />

        <TextView
            android:id="@+id/com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            
            android:text="xxx@XXX.com" />

        
    </LinearLayout>

    <RelativeLayout 
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/background">
        <ImageView 
            android:id="@+id/gai"
            android:layout_height="50dip"
            android:layout_width="50dip"
            android:background="@drawable/gai"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dip"
            android:layout_marginRight="60dip"/>
        <LinearLayout 
            android:layout_height="50dip"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/information_color"
            android:layout_alignParentBottom="true">
            
            <TextView 
                android:id="@+id/back"
                android:layout_marginTop="10dip"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="退出信息页"
                android:textSize="25dip"/>
            
        </LinearLayout>
        
    </RelativeLayout>
    
</LinearLayout>