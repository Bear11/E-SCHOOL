<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >
 <!--个人主页访问页面，用于隐私的保护--> 
 	<LinearLayout 
 	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	 	
		<FrameLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical" >
	
	            
	
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center"
	                android:orientation="vertical" >
	
	                <com.example.ext.common.imageCarousel.CircleImageView
	                    android:id="@+id/my_defalft_headpic"
	                    android:layout_width="50dip"
	                    android:layout_height="50dip"
	                    android:layout_gravity="center"
	                    android:layout_marginTop="30dip"
	                    android:background="@drawable/my_defalft_headpic" />
	                <TextView
	                    android:id="@+id/name1"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center"
	                    android:layout_marginTop="5dip"
	                    android:textSize="25dip"
	                    android:textColor="#0db8f6"
	                    android:text="昵称" />
	                <LinearLayout 
		                android:layout_height="50dip"
		                android:layout_width="match_parent"
		                android:orientation="vertical">
		                <LinearLayout 
			                android:layout_height="wrap_content"
			                android:layout_width="wrap_content"
			                android:layout_gravity="center"
			                android:layout_marginTop="18dip"
			                android:orientation="horizontal">
			                	<TextView 
			                	    android:id="@+id/where"
			                	    android:layout_height="wrap_content"
			                	    android:layout_width="wrap_content"
			                	    android:layout_marginRight="20dip"
			                	    android:layout_gravity="center"
			                	    android:drawableLeft="@drawable/icon_woman"
			                	    android:textColor="#A9A9A9"
			                	    android:text="男"/>
			                	<TextView 
			                	    android:id="@+id/where1"
			                	    android:layout_height="wrap_content"
			                	    android:layout_width="wrap_content"
			                	    android:layout_marginLeft="20dip"
			                	    android:drawableLeft="@drawable/address"
			                	    android:layout_gravity="center"
			                	    android:textColor="#A9A9A9"
			                	    android:text="朝阳"/>
		                	</LinearLayout>
	                    
	                    
	            	</LinearLayout>
	            </LinearLayout>
	            
	        </FrameLayout>
	        <LinearLayout 
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"
	            android:orientation="vertical"
	            android:background="#ffffff">
	            <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="50dip"
			        android:layout_marginTop="1dip"
			        android:background="@drawable/information_color"
			        android:orientation="horizontal" >
			
			        <TextView
			            android:id="@+id/phone1"
			            android:layout_width="150dip"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center"
			            android:layout_marginLeft="10dip"
			            android:drawableLeft="@drawable/icon_phone_blue"
			            android:text="   电话:" 
			            android:textColor="#dcdcdc"/>
			
			        <TextView
			            android:id="@+id/phone"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center"
			            
			            android:text="18859216454" />
			    </LinearLayout>
			    <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="50dip"
			        android:layout_marginTop="1dip"
			        android:background="@drawable/information_color"
			        android:orientation="horizontal" >
			
			        <TextView
			            android:id="@+id/username2"
			            android:layout_width="150dip"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center"
			            android:layout_marginLeft="10dip"
			            android:drawableLeft="@drawable/user2"
			            android:textColor="#dcdcdc"
			            android:text="   真实姓名:" />
			
			        <TextView
			            android:id="@+id/username1"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center"
			            
			            android:text="XXXX" />
			
			        
			    </LinearLayout>
			    
			    <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="50dip"
			        android:layout_marginTop="1dip"
			        android:background="@drawable/information_color"
			        android:orientation="horizontal" >
			
			        <TextView
			            android:id="@+id/com1"
			            android:layout_width="150dip"
			            android:layout_marginLeft="10dip"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center"
			            android:textColor="#dcdcdc"
			            android:drawableLeft="@drawable/email"
			            android:text="     邮箱:" />
			
			        <TextView
			            android:id="@+id/com"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center"
			            
			            android:text="xxx@XXX.com" />
			
			        
			    </LinearLayout>
			    
			   
			    
	        </LinearLayout>
        </LinearLayout>  
         <LinearLayout 
       	    android:layout_height="wrap_content"
       	    android:layout_width="match_parent"
       	    android:layout_alignParentBottom="true"
       	    android:layout_marginBottom="15dip"
       	    android:orientation="horizontal">
       	    <Button 
       	        android:id="@+id/back"
       	        android:layout_height="50dip"
       	        android:layout_width="match_parent"
       	        android:layout_marginLeft="10dip"
       	        android:layout_marginRight="10dip"
       	        android:layout_weight="1"
       	        android:text="返回"
       	        android:textColor="#ffffff"
       	        android:textSize="20sp"
       	        android:background="@drawable/login_1"/>
       	    <Button 
       	        android:id="@+id/focus"
       	        android:layout_height="50dip"
       	        android:layout_width="match_parent"
       	        android:layout_marginLeft="10dip"
       	        android:layout_marginRight="10dip"
       	        android:layout_weight="1"
       	        android:text="关注"
       	        android:textColor="#ffffff"
       	        android:textSize="20sp"
       	        android:background="@drawable/login_1"/>
       	</LinearLayout>
       	
       
</RelativeLayout>
