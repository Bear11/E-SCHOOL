<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff" >

            <com.example.ext.common.imageCarousel.CircleImageView
                android:id="@+id/img_pic"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/my_defalft_headpic" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/img_pic"
                android:textColor="#444444"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/now_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/img_pic"
                android:textColor="#888888"
                android:textSize="10sp" />

            
        </RelativeLayout>
		
        <LinearLayout
            android:id="@+id/head"
            android:layout_width="60dip"
            android:layout_height="30dip"
            android:background="@drawable/border_linerlayout_foucus"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="20dip"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dip"
                android:text="动态"
                android:textColor="#3A5FCD" />
            
        </LinearLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/edt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:lineSpacingExtra="7dp"
                android:maxLines="10"
                android:padding="3dp"
                android:textColor="#333333"
                android:textSize="16sp" />
            <LinearLayout           
                android:id="@+id/item_image_layout"
                android:layout_below="@id/edt1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10.0dip"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" >

                 <!-- <ImageView
                    android:id="@+id/item_image_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    /> 
                    <ImageView
                    android:id="@+id/item_image_1"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    /> 
                    <ImageView
                    android:id="@+id/item_image_2"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    /> --> 
                
                
               <ImageView
                    android:id="@+id/item_image_0"
                    style="@style/item_image"
                    android:background="@drawable/bai" />
              

                <View style="@style/item_image_gap" />

                <ImageView
                    android:id="@+id/item_image_1"
                    style="@style/item_image"
                    android:background="@drawable/bai" />

                <View style="@style/item_image_gap" />

                <ImageView
                    android:id="@+id/item_image_2"
                    style="@style/item_image"
                    android:background="@drawable/bai" />
            </LinearLayout>

            <ImageView
                android:id="@+id/share_type"
                android:layout_width="wrap_content"
                android:layout_below="@id/item_image_layout"
                android:layout_height="wrap_content"              
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
               />
            
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="0dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

           
        </LinearLayout>

   
    </LinearLayout>

</LinearLayout>