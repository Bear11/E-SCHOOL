<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
  
    <LinearLayout
       
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/zone_title_bg"
            android:paddingBottom="8.0dip"
            android:paddingTop="8.0dip" >

            <ImageView
                android:id="@+id/title_bar_left_menu"
                android:layout_width="44.5dip"
                android:layout_height="22.5dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="11.0dip"
                android:paddingRight="11.0dip"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:src="@drawable/icon_white_click" 
                android:onClick="onClickLiftMenu"
                 />

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="40dip"
                android:layout_height="22.5dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:paddingLeft="6.0dip"
                android:paddingRight="6.0dip"
                android:src="@drawable/right_drawer_normal" />

             <EditText 
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:gravity="center_vertical"                     
                android:layout_toLeftOf="@+id/iv_ersure"
                android:layout_toRightOf="@+id/icon_find"
                android:hint="请输入关键字查询" 
                android:textSize="11sp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"    
                android:paddingTop="3dp"
                android:paddingBottom="2dp"         
                android:background="@drawable/search_edittext"
                android:lines="1"               
                 />
              <ImageView
                android:id="@+id/iv_ersure"
                android:layout_width="27dp"
                android:layout_height="24dp"
                android:layout_marginRight="0dp"   
                android:layout_toLeftOf="@id/iv_add"         
                android:layout_centerVertical="true"
                android:paddingLeft="11.0dip"
                android:paddingRight="11.0dip"
                android:background="@drawable/img_ensure"
                android:padding="6dp"
                android:src="@drawable/icon_jiantou"
                               />
              <ImageView
                android:id="@+id/icon_find"
                android:layout_width="20dp"
                android:layout_height="24dp"
                android:padding="5dp"              
                android:layout_toRightOf="@id/title_bar_left_menu"    
                android:layout_marginRight="0dp"         
                android:layout_centerVertical="true"    
                android:background="#ffffff"            
                android:src="@drawable/search_normal" 
              
                android:onClick="onClickLiftMenu"
                 />
          <!--   <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:layout_marginBottom="7.5dip"
                android:layout_marginLeft="12.5dip"
                android:layout_marginRight="12.5dip"
                android:layout_toLeftOf="@+id/iv_add"
                android:layout_toRightOf="@+id/title_bar_left_menu"
                android:background="@drawable/tab_bg"
                android:orientation="horizontal" >
 -->
               
         
        </RelativeLayout>
    </LinearLayout>
    
    
    
    

</LinearLayout>
