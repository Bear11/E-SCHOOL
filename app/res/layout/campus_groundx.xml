<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff" >

            <com.example.ext.common.imageCarousel.CircleImageView
                android:id="@+id/img_pic"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/my_defalft_headpic" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/img_pic"
                android:textColor="#444444"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/now_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/img_pic"
                android:textColor="#888888"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/img_pic2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/icon_circle_down" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/edt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:lineSpacingExtra="7dp"
                android:maxLines="10"
                android:padding="3dp"
                android:textColor="#333333"
                android:textSize="16sp" />
            <LinearLayout           
                android:id="@+id/item_image_layout"
                android:layout_below="@id/edt1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10.0dip"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" >

                 <!-- <ImageView
                    android:id="@+id/item_image_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    /> 
                    <ImageView
                    android:id="@+id/item_image_1"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    /> 
                    <ImageView
                    android:id="@+id/item_image_2"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    /> --> 
                
                
               <ImageView
                    android:id="@+id/item_image_0"
                    style="@style/item_image"
                    android:background="@drawable/bai" />
              

                <View style="@style/item_image_gap" />

                <ImageView
                    android:id="@+id/item_image_1"
                    style="@style/item_image"
                    android:background="@drawable/bai" />

                <View style="@style/item_image_gap" />

                <ImageView
                    android:id="@+id/item_image_2"
                    style="@style/item_image"
                    android:background="@drawable/bai" />
            </LinearLayout>

            <ImageView
                android:id="@+id/share_type"
                android:layout_width="45dp"
                android:layout_below="@id/item_image_layout"
                android:layout_height="wrap_content"              
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
               />
            
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="0dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/dianzanshu"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_dianzan" />

                <TextView
                    android:id="@+id/clickNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#666666"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/pinglunshu"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_bubble" />

                <TextView
                    android:id="@+id/commentNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#666666"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/zhuanfaliang"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_zhuanfa" />

                <TextView
                    android:id="@+id/forwardNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#666666"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

   
    </LinearLayout>

</LinearLayout>