<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <package name="EXT_activities" extends="ext_web">
		<action name="act_*" method="{1}"
			class="com.ext.activities.action.ActivitiesAction">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
		
		<action name="actj_*" method="{1}"
			class="com.ext.activities.action.ActivityJoinAction">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
    </package>
</struts>   